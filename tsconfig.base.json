{
  "compilerOptions": {
    "target": "es2016",
    "jsx": "react",
    "module": "commonjs",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "common/*": ["packages/common/src/*"]
    },
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "rootDir": "./"
  }
}
